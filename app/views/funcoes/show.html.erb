<div class="index-body page-header-light shadow">
  <div class="header-container ">
    <%= link_to root_path, class: "btn btn-outline-secondary btn-sm me-3" do %>
      <i class="fa fa-arrow-left"></i>
      <% end %>
      <h1 class="h4 mb-0"><%= t("common.funcoes", default: "Funcoes") %></h1>
    </div>
    <%= link_to new_funcao_path, class: "btn btn-incluir d-flex align-items-center" do %>
    <i class="fa fa-plus me-2"></i> <%= t("common.new_funcao", default: "Incluir") %>
    <% end %>
  </div>
  <%= simple_form_for(@funcao, html: { class: "container-fluid page-inner" }) do |f| %>
  <div class="card">
    <div class="card-body">
      <!-- Campos do formulário -->
      <div class="form-inputs">
          <div class="row mb-3">
            <div class="col-12 col-md-6">
              <!-- Exibe o campo de entrada ou associação (FK) de forma responsiva -->
              <%= f.input :nome, input_html: { class: "form-control", style: "max-width: 100%;", placeholder: "Nome", title: "Informe nome" } %>
            </div>
          </div>
      </div>
    </div>
    <div class="card-footer justify-content-between">
      <!-- Botões do formulário -->
      <%= link_to t("common.back", default: "Voltar"), funcoes_path, class: "btn btn-secondary" %>
    </div>
  </div>
  <% end %>
