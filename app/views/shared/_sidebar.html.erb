        <li class="nav-item">
          <a data-bs-toggle="collapse" href="#base">
            <i class="fas fa-layer-group"></i>
            <p>Home</p>
            <span class="caret"></span>
          </a>
          <div class="collapse" id="base">
            <ul class="nav nav-collapse">
              <li>
                <a href="<%= root_path %>">
                  <span class="sub-item">Home</span>
                </a>
              </li>
            </ul>
          </div>
        </li>
        <% if current_user.funcao&.nome == "CEO" %>
          <li class="nav-item">
            <a data-bs-toggle="collapse" href="#funcoes">
              <i class="fas fa-cogs"></i>
              <p>Funções</p>
              <span class="caret"></span>
            </a>
            <div class="collapse" id="funcoes">
              <ul class="nav nav-collapse">
                <li>
                  <a href="<%= funcoes_path %>">
                    <span class="sub-item">Gerenciar Funções</span>
                  </a>
                </li>
              </ul>
            </div>
          </li>
        <% end %>
        <li class="nav-item">
          <a data-bs-toggle="collapse" href="#estabelecimentos">
            <i class="fas fa-store"></i>
            <p>Estabelecimentos</p>
            <span class="caret"></span>
          </a>
          <div class="collapse" id="estabelecimentos">
            <ul class="nav nav-collapse">
              <li>
                <a href="<%= estabelecimentos_path %>">
                  <span class="sub-item">Ver meus Estabelecimentos</span>
                </a>
              </li>
              <% if current_user.funcao&.nome == "CEO" %>
                <li>
                  <a href="<%= users_estabelecimentos_path %>">
                    <span class="sub-item">Gerenciar Estabelecimentos</span>
                  </a>
                </li>
              <% end %>
            </ul>
          </div>
        </li>
        <!-- Sidebar para Categorias -->
        <li class="nav-item">
          <a data-bs-toggle="collapse" href="#categorias">
            <i class="fas fa-tags"></i>
            <p>Categorias</p>
            <span class="caret"></span>
          </a>
          <div class="collapse" id="categorias">
            <ul class="nav nav-collapse">
              <li>
                <a href="<%= categorias_path %>">
                  <span class="sub-item">Listar Categorias</span>
                </a>
              </li>
              <li>
                <a href="<%= new_categoria_path %>">
                  <span class="sub-item">Cadastrar Categoria</span>
