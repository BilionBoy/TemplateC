        <% if current_user.funcao&.nome == "CEO"%>
          <li class="nav-item">
            <a data-bs-toggle="collapse" href="#usuarios">
              <i class="fas fa-users"></i>
              <p>Usuários</p>
              <span class="caret"></span>
            </a>
            <div class="collapse" id="usuarios">
