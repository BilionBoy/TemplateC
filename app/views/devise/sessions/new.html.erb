<div class="container mt-5">
  <div class="row justify-content-center">
    <!-- Formulário de login do lado direito -->
    <div class="col-lg-6 col-md-6 login-form">
      <div class="card shadow-lg p-4">
        <div class="text-center mb-4">
          <h2 class="fw-bold">Login</h2>
          <p class="text-muted">Entre com seu email e senha</p>
        </div>
        <!-- Flash messages (erros de validação, etc.) -->
        <%= flash[:alert] %>
        <!-- Formulário de login do Devise -->
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <!-- Campos do formulário -->
          <div class="row mb-3">
            <div class="col-md-12">
              <%= f.input :email, required: false, autofocus: true, placeholder: "Email", input_html: { class: "form-control" } %>
            </div>
          </div>
          <div class="row mb-3">
            <div class="col-md-12">
              <%= f.input :password, required: false, placeholder: "Senha", input_html: { class: "form-control" } %>
            </div>
          </div>
          <!-- Opção de lembrar de mim -->
          <div class="row mb-3">
            <div class="col-md-12">
              <%= f.input :remember_me, as: :boolean, label: "Lembrar-me" if devise_mapping.rememberable? %>
            </div>
          </div>
          <!-- Botão de envio -->
          <div class="form-actions mt-3">
            <%= f.button :submit, "Log in", class: "btn btn-primary w-100" %>
          </div>
        <% end %>
        <!-- Links para registro ou recuperação de senha -->
        <div class="links mt-3 text-center">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
